<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PharmaciesFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <include layout="@layout/toolbar"/>

        <EditText
            android:id="@+id/ed_search_lab"
            android:layout_width="match_parent"
            android:layout_marginTop="60dp"
            android:hint="بحث عن مختبرات التحاليل الطبية"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/city_searchFilter_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:text=" فلتر البحث حسب المدينة"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="170dp"
            android:id="@+id/rv_lab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>