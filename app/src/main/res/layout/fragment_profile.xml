<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl">

        <View
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:background="@drawable/splashdes" />

        <RelativeLayout
            android:id="@+id/rl_two_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_image_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/doctor_logo" />


            <TextView
                android:id="@+id/show_user_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_image_profile"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_view_round"
                android:text="text"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-50dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_one_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="290dp"
                    android:elevation="10dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp">


                        <TextView
                            android:id="@+id/email_show_user_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="عنوان البريد الالكتروني: "
                            android:textColor="@color/colorWhite"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/email_show_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="5dp"
                            android:layout_toEndOf="@id/email_show_user_tv"
                            android:text="test"
                            android:textColor="@color/colorWhite" />
                        <TextView
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/time_from_to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/email_show_user"
                            android:text="مواعيد العمل:  "
                            android:textColor="@color/colorWhite"></TextView>
                        <TextView
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/email_show_user"
                            android:text="مواعيد العمل"
                            android:textColor="@color/colorWhite"
                            android:layout_toEndOf="@+id/time_from_to"></TextView>
                        <TextView
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/click_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/time_from_to"
                            android:text="نوع العيادة:  "
                            android:textColor="@color/colorWhite"></TextView>
                        <TextView
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/clinc_type_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/time_from_to"
                            android:text="نوع العيادة"
                            android:textColor="@color/colorWhite"
                            android:layout_toEndOf="@+id/click_type"></TextView>
                        <TextView
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/mobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/clinc_type_desc"
                            android:text="رقم الهاتف :  "
                            android:textColor="@color/colorWhite"></TextView>
                        <TextView
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/mobile_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/clinc_type_desc"
                            android:text="0599"
                            android:textColor="@color/colorWhite"
                            android:layout_toEndOf="@+id/mobile"></TextView>
                        <TextView
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/mobile_desc"
                            android:text="عنوان العيادة :  "
                            android:textColor="@color/colorWhite"></TextView>
                        <TextView
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/address_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/mobile_desc"
                            android:text="العنوان"
                            android:textColor="@color/colorWhite"
                            android:layout_toEndOf="@+id/address"></TextView>




                    </RelativeLayout>


                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>


</FrameLayout>